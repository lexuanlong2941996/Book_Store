    <div class="left-sidebar">
        <!--brands_products-->
        <div class="brands_products" >
            <h2 style="margin-top:0px;margin-bottom:0px">Danh mục </h2>
            <div class="brands-name">
                <div id="list-category">
                    <ul class="nav nav-pills nav-stacked">
                        @foreach (var item in (ViewData["Authors"] as IList<Author>).OrderByDescending(a=>a.NumberOfBooks))
                        {
                            <li>
                                <a href="/Products/Category?id=@item.ID">
                                    <span class="pull-right">(@item.NumberOfBooks)</span>
                                    <b>@item.Name</b>
                                    <p hidden>@item.ID</p>
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
